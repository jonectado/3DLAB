<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/ImagenF"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/black"
        app:layout_constraintVertical_bias="0.05"/>

    <TextView
        android:id="@+id/ColorTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImagenF"
        app:layout_constraintVertical_bias="0.02"
        android:textColor="@color/text_plain"
        android:fontFamily="@font/breeserif"/>

    <TextView
        android:id="@+id/Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/ColorTag"
        app:layout_constraintTop_toTopOf="@+id/ColorTag"
        android:text=""
        tools:text="Negro"
        android:textColor="@color/text_plain"
        android:fontFamily="@font/breeserif"/>

    <TextView
        android:id="@+id/MarcaTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marca: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorTag"
        app:layout_constraintVertical_bias="0.01"
        android:textColor="@color/text_plain"
        android:fontFamily="@font/breeserif"/>

    <TextView
        android:id="@+id/Marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/MarcaTag"
        app:layout_constraintTop_toTopOf="@+id/MarcaTag"
        android:text=""
        tools:text="BambooLab"
        android:textColor="@color/text_plain"
        android:fontFamily="@font/breeserif"/>
    <TextView
        android:id="@+id/precioTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MarcaTag"
        app:layout_constraintVertical_bias="0.01"
        android:textColor="@color/text_plain"
        android:fontFamily="@font/breeserif"/>

    <TextView
        android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/precioTag"
        app:layout_constraintTop_toTopOf="@+id/precioTag"
        android:text=""
        tools:text="$ 70000.0"
        android:textColor="@color/text_plain"
        android:fontFamily="@font/breeserif"/>
    <TextView
        android:id="@+id/RestanteTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restante: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precioTag"
        app:layout_constraintVertical_bias="0.01"
        android:textColor="@color/text_plain"
        android:fontFamily="@font/breeserif"/>

    <TextView
        android:id="@+id/restante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/RestanteTag"
        app:layout_constraintTop_toTopOf="@+id/RestanteTag"
        android:text=""
        tools:text="700.0 gr"
        android:textColor="@color/text_plain"
        android:fontFamily="@font/breeserif"/>




</androidx.constraintlayout.widget.ConstraintLayout>