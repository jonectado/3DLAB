<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ImagenF"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/ColorTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/breeserif"
        android:text="Color:   "
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImagenF"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/Color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/breeserif"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/text_plain"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/ColorTag"
        app:layout_constraintTop_toTopOf="@+id/ColorTag"
        tools:text="Negro" />

    <Button
        android:id="@+id/estadoF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_general"
        android:text="Bien"
        android:textColor="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TipoTag">

    </Button>

    <TextView
        android:id="@+id/MarcaTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/breeserif"
        android:text="marca:   "
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/ColorTag"
        app:layout_constraintTop_toBottomOf="@+id/Color"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/Marca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/breeserif"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/text_plain"
        app:layout_constraintEnd_toEndOf="@+id/Color"
        app:layout_constraintStart_toEndOf="@+id/MarcaTag"
        app:layout_constraintTop_toTopOf="@+id/MarcaTag"
        tools:text="BambooLab" />

    <TextView
        android:id="@+id/precioTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/breeserif"
        android:text="Precio:   "
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/MarcaTag"
        app:layout_constraintTop_toBottomOf="@+id/Marca"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/precio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/breeserif"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/text_plain"
        app:layout_constraintEnd_toEndOf="@+id/Color"
        app:layout_constraintStart_toEndOf="@+id/precioTag"
        app:layout_constraintTop_toTopOf="@+id/precioTag"
        tools:text="$ 70000.0" />

    <TextView
        android:id="@+id/RestanteTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/breeserif"
        android:text="Restante:   "
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/precioTag"
        app:layout_constraintTop_toBottomOf="@+id/precio"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/restante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/breeserif"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/text_plain"
        app:layout_constraintEnd_toEndOf="@+id/Color"
        app:layout_constraintStart_toEndOf="@+id/RestanteTag"
        app:layout_constraintTop_toTopOf="@+id/RestanteTag"
        tools:text="700.0 gr" />

    <TextView
        android:id="@+id/TipoTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/breeserif"
        android:text="Tipo:   "
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/RestanteTag"
        app:layout_constraintTop_toBottomOf="@+id/restante"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/Tipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/breeserif"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/text_plain"
        app:layout_constraintEnd_toEndOf="@+id/Color"
        app:layout_constraintStart_toEndOf="@+id/TipoTag"
        app:layout_constraintTop_toTopOf="@+id/TipoTag"
        tools:text="PLA" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="184dp" />


</androidx.constraintlayout.widget.ConstraintLayout>