<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="Filamentos.AnadirFilamentos.AñadirFilamentosMain">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/backarrow"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/backarrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.6"
        android:fontFamily="@font/breeserif"
        android:text="Nuevo Filamento"
        android:textColor="@color/text_plain"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backButton"

        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/imageViewF"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/filament" />

    <TextView
        android:id="@+id/ColorTag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.2"
        android:fontFamily="@font/breeserif"
        android:text="Color"
        android:textColor="@color/text_plain"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewF"
        app:layout_constraintVertical_bias="0.04" />

    <EditText
        android:id="@+id/color"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.85"
        android:background="@color/text_write"
        android:fontFamily="@font/breeserif"
        android:hint="¿Que color es?"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorTag"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/MarcaTag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="0.2"
        android:fontFamily="@font/breeserif"
        android:text="Marca"
        android:textColor="@color/text_plain"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ColorTag"
        app:layout_constraintTop_toBottomOf="@+id/color"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/marca"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.85"
        android:background="@color/text_write"
        android:ems="10"
        android:fontFamily="@font/breeserif"
        android:hint="Marca del filamento"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MarcaTag"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/precioTag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="0.2"
        android:fontFamily="@font/breeserif"
        android:text="Precio"
        android:textColor="@color/text_plain"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ColorTag"
        app:layout_constraintTop_toBottomOf="@+id/marca"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/precio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginHorizontal="30dp"
        android:background="@color/text_write"
        android:ems="10"
        android:fontFamily="@font/breeserif"
        android:hint="Cuanto le costó"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precioTag"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/RestanteTag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="0.2"
        android:fontFamily="@font/breeserif"
        android:text="Peso"
        android:textColor="@color/text_plain"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ColorTag"
        app:layout_constraintTop_toBottomOf="@+id/precio"
        app:layout_constraintVertical_bias="0.09" />

    <EditText
        android:id="@+id/restante"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.85"
        android:background="@color/text_write"
        android:ems="10"
        android:fontFamily="@font/breeserif"
        android:hint="¿Que peso tiene?"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RestanteTag"
        app:layout_constraintVertical_bias="0.1"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:background="#07F8F7"
        android:fontFamily="@font/breeserif"
        android:text="Añadir"
        android:textColor="@color/text_plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restante" />
    <!--
        cambiar tamaño y color maybe
        -->


</androidx.constraintlayout.widget.ConstraintLayout>